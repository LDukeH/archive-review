generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review{
  id       String   @id @default(cuid())
  title     String
  description String
  rating    Float
  authorName  String
  coverImage String
  type String
  ExternalLink String
  story String
  pros String
  cons String
  summary String
  createdAt DateTime @default(now())

  tags Tag[]
}

model Tag{
  id String @id @default(cuid())
  name String @unique
  reviews Review[]
}